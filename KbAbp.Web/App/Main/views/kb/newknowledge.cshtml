<div ng-controller="app.views.knowledge.new as vm">
    <form id="Knowledge" role="form" name="Knowledge" novalidate>

        <div class="form-group">
            <label for="KbCategoryItemName">@L("KbCategoryItemName")</label>
            <select id="KbCategoryItemName" ng-model="kbCategoryItemId"
                    ng-options="m.id as m.name for m in vm.kbCategoryItems" ng-change="vm.kbCategoryItemsChange();" class="form-control" placeholder="@L("EnterHere")" required></select>
        </div>

        <div class="form-group">
            <label for="KnowledgeCategory">@L("KnowledgeCategoryName")</label>
            <select id="KnowledgeCategory" ng-model="vm.knowledge.knowledgeCategoryId"
                    ng-options="m.id as m.name for m in vm.knowledgeCategories" class="form-control" placeholder="@L("EnterHere")" required></select>
        </div>

        <div class="form-group">
            <label for="Name">@L("KnowledgeName")</label>
            <input id="Name" ng-model="vm.knowledge.name" class="form-control" placeholder="@L("EnterHere")" required />
        </div>

        <div class="form-group">
            <label for="Detail">@L("Detail")</label>
            <div class="row">
                <div class="col-md-6">
                    <textarea name="content" class="content-box"
                              markdown-editor="{'iconlibrary': 'fa', addExtraButtons: true, resize: 'vertical'}"
                              rows="10" ng-model="markdown" required></textarea>
                </div>
                <div>
                    <div marked="markdown" class="markdown outline" style="padding: 20px"></div>
                </div>
            </div>
        </div>
        @*ref: https://github.com/ghiscoding/angular-markdown-editor*@
        <button ng-click="vm.saveKnowledge()" ng-disabled="knowledge.$invalid" type="submit" class="btn btn-primary">@L("Create")</button>
    </form>
</div>