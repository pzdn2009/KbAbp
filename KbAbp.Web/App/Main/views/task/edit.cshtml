<div ng-controller="app.views.task.edit as vm">
    <form id="EditTaskForm" role="form" name="editTaskForm" novalidate>

        <div class="form-group">
            <label for="TaskProject">@L("Project")</label>
            <select ng-model="vm.task.projectID" ng-options="m.id as m.name for m in vm.projects" class="form-control" placeholder="@L("EnterHere")" required></select>
        </div>

        <div class="form-group">
            <label for="TaskDescription">@L("Description")</label>
            <textarea id="TaskDescription" ng-model="vm.task.description" class="form-control" rows="3" placeholder="@L("EnterHere")" required></textarea>
        </div>

        <div class="form-group">
            <label for="TaskRemark">@L("Remark")</label>
            <textarea id="TaskRemark" ng-model="vm.task.remark" class="form-control" rows="3" placeholder="@L("EnterHere")" required></textarea>
        </div>

        <button ng-click="vm.saveTask()" ng-disabled="editTaskForm.$invalid" type="submit" class="btn btn-primary">@L("Edit")</button>

    </form>
</div>